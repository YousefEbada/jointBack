{
  "compilerOptions": {
    "target": "ES2022",

    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "rootDir": "src",
    "outDir": "dist",

    "baseUrl": "./src",
    "paths": {
      "app/*": ["app/*"],
      "infra/*": ["infra/*"],
      "modules/*": ["modules/*"],
      "shared/*": ["shared/*"],
      "config/*": ["config/*"],
      "jobs/*": ["jobs/*"]
    },

    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
